{
    "name": "ijideals/mention-system",
    "description": "A Laravel package to handle @username mentions in content.",
    "type": "laravel-package",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name / Company",
            "email": "your@email.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/database": "^10.0|^11.0",
        "illuminate/events": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "IJIDeals\\MentionSystem\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IJIDeals\\MentionSystem\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "IJIDeals\\MentionSystem\\Providers\\MentionSystemServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
